# Application Settings
APP_NAME="Job Opening WhatsApp Bot"
DEBUG=true

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/job_opening_bot
DB_HOST=localhost
DB_PORT=5432
DB_NAME=job_opening_bot
DB_USER=postgres
DB_PASSWORD=postgres

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MESSAGE_TIMEOUT_MINUTES=5

# WhatsApp API (WAHA)
WAHA_API_URL=http://localhost:3000
WAHA_API_TOKEN=your_waha_token_here

# OpenAI / ChatGPT
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Rate Limiting
RATE_LIMIT_MESSAGES_PER_MINUTE=10

